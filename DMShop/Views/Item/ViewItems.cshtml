@section Scripts{ 
    <script>
        $(document).ready(function () { 
            $('#ViewItem').DataTable();
            $('#ItemCounter').load('/Item/CountItem');
            $('.saleCount').each(function () { 
                var count = $(this);
                $.ajax({
                    before: function () { },
                    type: 'Get' , 
                    url: '/Item/SaleCount',
                    data: {
                        ItemId: count.data('id')
                    },
                    success: function (ReturnedCount) {
                        count.text("("+ReturnedCount+" Sold Out)");
                    },
                    error: function () { },
                    after: function () { }
                });  
            })
        });
        

    </script>


